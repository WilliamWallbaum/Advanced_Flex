#section-header {
  margin: var(--global-p1) 0;
}
#section-header h1 {
  font-size: calc(var(--text-basic) * 1.3);
  text-align: center;
  border-bottom: 2px solid;
}

.yotpo.bottomLine {
  margin-top: -16px;
}

#section-header .yotpo .yotpo-display-wrapper .standalone-bottomline {
  display: grid;
  justify-items: center;
}

#section-header
  .yotpo
  .yotpo-display-wrapper
  .standalone-bottomline
  .yotpo-bottomline
  a.text-m {
  display: none;
}

#section-header
  .yotpo
  .yotpo-display-wrapper
  .standalone-bottomline
  .yotpo-bottomline
  .yotpo-icon {
  font-size: calc(var(--text-basic) * 1.3);
}

/* Make the second star larger */
#section-header
  .yotpo
  .yotpo-display-wrapper
  .standalone-bottomline
  .yotpo-bottomline
  .yotpo-icon:nth-child(2),
#section-header
  .yotpo
  .yotpo-display-wrapper
  .standalone-bottomline
  .yotpo-bottomline
  .rating-star:nth-child(4) {
  font-size: calc(var(--text-basic) * 1.5);
}

/* Make the middle star even larger */
#section-header
  .yotpo
  .yotpo-display-wrapper
  .standalone-bottomline
  .yotpo-bottomline
  .rating-star:nth-child(3) {
  font-size: calc(
    var(--text-basic) * 1.9
  ); /* Adjust the size of the middle star */
}

#section-header
  .yotpo
  .yotpo-display-wrapper
  .standalone-bottomline
  .yotpo-stars {
  display: grid;
  grid-template-columns: repeat(5, 1fr);
  align-items: baseline;
  justify-items: center;
}

#section-header
  .yotpo
  .yotpo-display-wrapper
  .standalone-bottomline
  .yotpo-bottomline {
  background-color: white;
  padding: 0 var(--global-p1);
}

[class^="col-"] {
  display: grid;
  padding: var(--global-p1);
  transition: all 0.25s ease;
}

.purchase-details.has-quantity-box {
  display: none;
}
