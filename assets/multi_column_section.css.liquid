.multi-col {
  display: grid;
  grid-gap: var(--global-p1);
  padding: var(--global-p1) calc(var(--global-p1)*4);
}
.multi-col-header {
  display: grid;
  grid-gap: calc(var(--global-p1)*.2);
}
.multi-col-body {
  display: flex;
  grid-gap: calc(var(--global-p1)*2);
  justify-items: center;
  flex-direction: row;
  justify-content: space-evenly;
}
.multi-col-footer {
  display: grid;
  grid-gap: calc(var(--global-p1)*.2);
}

[id^="block-"] {
  display: grid;
  grid-gap: 0;
  padding: calc(var(--global-p1)*.5);
}

/* Responsive Styles */
  @media only screen and (max-width: 490px) {}
  @media only screen and (max-width: 768px) {
  .multi-col-body {
    flex-direction: column;
    align-items: center;
  }
  [id^="block-"] {
    width: 100% !important;
    gap: var(--global-p1);
  }
  [id^="block-"] h3 {
    text-align: center;
    font-size: calc(var(--text-basic) * 1.25);
  }
  @media only screen and (min-width: 769px) {}
}