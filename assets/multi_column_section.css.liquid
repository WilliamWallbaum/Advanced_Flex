.multi-col {
  display: grid;
  grid-gap: var(--global-p1);
  padding: var(--global-p2) 0;
}
.multi-col-header {
  display: grid;
  grid-gap: calc(var(--global-p1)*.2);
}
.multi-col-body {
  display: flex;
  grid-gap: calc(var(--global-p1)*2);
  padding: 0 calc(var(--global-p1)*4);
  justify-items: center;
  flex-direction: row;
  justify-content: space-evenly;
}
.multi-col-footer {
  display: grid;
  grid-gap: calc(var(--global-p1)*.2);
}

[id^="block-"] {
  display: grid;
  grid-gap: 0;
  padding: calc(var(--global-p1)*.5);
}