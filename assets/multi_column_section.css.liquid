/* Base Styles */
.multi-col,
.multi-col-header,
.multi-col-body,
.multi-col-footer {
  display: grid;
  grid-gap: var(--global-p1);
}

.multi-col {
  padding: var(--global-p1) calc(var(--global-p1) * 4);
}

.multi-col-body {
  display: flex;
  flex-direction: row;
  justify-content: space-evenly;
  align-items: center;
}

[id^="block-"] {
  display: grid;
  grid-gap: 0;
  padding: calc(var(--global-p1) * 0.5);
}

[id^="block-"] h3 {
  text-align: center;
  font-size: calc(var(--text-basic) * 1.25);
}

/* Responsive Styles */
@media only screen and (max-width: 768px) {
  .multi-col {
    padding: var(--global-p1) calc(var(--global-p1) * 1);
  }
  
  .multi-col-body {
    flex-direction: column;
    align-items: center;
  }

  [id^="block-"] {
    width: 100% !important;
    gap: var(--global-p1);
  }

  [id^="block-"] h3 {
    text-align: center;
    font-size: calc(var(--text-basic) * 1.25);
  }
}
