{% comment %}
  Required values
  variant: <string>
  ______________
  Optional values
  copy_title: <string>
  variant: <object>
{% endcomment %}


<a href="/cart/add?id={{ variant.id }}" id="add-left" class="buy-product">
  {% render 'image-element' with
    image: variant.featured_image.src
    alt: variant.featured_image.alt
    figure_classes: "buy-image"
  %}

  <div class="buy-product-copy">
    {% if copy_title != blank %}
      {{ copy_title }}
    {% else %}
    <h3>{{ variant.title }}</h3>
    {% endif %}
    
    {% if copy_description != blank %}
      {{ copy_description }}
    {% else %}
      Add {{ variant.title }} to Cart
    {% endif %}
  </div>
</a>

{% style %}
  .buy-product {
    display: grid;
    grid-template-columns: 1fr 2fr;
    grid-template-areas: "buy-image buy-product-copy";
    color: white;
    margin: 0;
    padding: 0;
  }
  .buy-product form {
    align-items: center;
    justify-content: center;
  }
  .buy-image {
    grid-area: buy-image;
    overflow: visible;
  }
  .buy-image img {}
  .buy-product-copy {
      grid-area: buy-product-copy;
      display: flex;
      flex-direction: column;
      justify-content: center;
  }
  .buy-product-copy h3 {
    color: inherit;
  }

