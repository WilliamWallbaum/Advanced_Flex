{% assign main_collection = product.collections.first %}
{% assign width = section.settings.width %}

{% style %}
  #product-recommendations {
    padding: var(--global-p2);
  }
  @media (max-width: 490px) {
    #product-recommendations {
      padding: var(--global-p1);
    }
    .product-grid {
      padding: var(--global-p1) !important;
    }
{% endstyle %}

<!-- Product Recommendations -->
{% if section.settings.show_section %}
  <div
    id="product-recommendations"
    class="section is-width-{{ width }} product-recommendations"
    data-url="{{ routes.product_recommendations_url }}?section_id={{ section.id }}&product_id={{ product.id }}&limit={{ section.settings.product-limit }}&intent={{ section.settings['product-type'] }}"
  >
    <header>
      <h2>{{ section.settings['recommendation-title'] }}</h2>
      <h3>{{ section.settings['similar-products-title'] }}</h3>
    </header>

    <div class="product-grid">
      {% if section.settings['product-type'] == 'related' %}
        {% for product in recommendations.products limit: section.settings['product-limit'] %}
          {% include 'product-card',
            show_show_product_description: section.settings.show_description,
            button_label: section.settings.button_label,
            button_class: section.settings.button_class,
            button_style: section.settings.button_style,
            card_width: section.settings.card_width
          %}
        {% endfor %}
      {% elsif section.settings['product-type'] == 'complementary' %}
        {% for product in recommendations.products limit: section.settings['product-limit'] %}
          {% include 'product-card',
            show_show_product_description: section.settings.show_description,
            button_label: section.settings.button_label,
            button_class: section.settings.button_class,
            button_style: section.settings.button_style,
            card_width: section.settings.card_width
          %}
        {% endfor %}
      {% else %}
        {% for product in main_collection.products limit: section.settings['product-limit'] %}
          {% include 'product-card',
            show_show_product_description: section.settings.show_description,
            button_label: section.settings.button_label,
            button_class: section.settings.button_class,
            button_style: section.settings.button_style,
            card_width: section.settings.card_width
          %}
        {% endfor %}
      {% endif %}
    </div>
  </div>
{% endif %}

