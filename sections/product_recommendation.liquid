      "default": "Product Recommendations"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "select",
      "id": "width",
      "label": "Width",
      "default": "standard",
      "options": [
        {
          "value": "half",
          "label": "Half"
        },
        {
          "value": "standard",
          "label": "Standard"
        },
        {
          "value": "wide",
          "label": "Wide"
        }
      ]
    },
    {
      "type": "checkbox",
      "id": "similar-products",
      "label": "Show Similar Products",
      "default": true
    },
    {
      "type": "radio",
      "id": "product-type",
      "label": "Product Type",
      "options": [
        {
          "value": "complementary",
          "label": "Complementary Products"
        },
        {
          "value": "related",
          "label": "Related Products"
        },
        {
          "value": "collection",
          "label": "Collection"
        }
      ],
      "default": "complementary"
    },
    {
      "type": "header",
      "content": "Product Card",
      "info": "Save the page to reload the cards, sometimes you might need to reload the page, for changes to appear."
    },
    {
      "type": "text",
      "id": "similar-products-title",
      "label": "Similar Products Title",
      "default": "Similar Products"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label"
    },
    {
      "type": "select",
      "id": "button_class",
      "label": "Button Class",
      "options": [
        {
          "value": "btn",
          "label": "Default Button"
        },
        {
          "value": "btn-primary",
          "label": "Primary Button"
        },
        {
          "value": "btn-secondary",
          "label": "Secondary Button"
        }
      ]
    },
    {
      "type": "select",
      "id": "button_style",
      "label": "Button Style",
      "options": [
        {
          "value": "btn--small",
          "label": "Small Button"
        },
        {
          "value": "btn--large",
          "label": "Large Button"
        }
      ]
    },
    {
      "type": "range",
      "id": "card_width",
      "label": "Card Width",
      "min": 100,
      "max": 360,
      "step": 20,
      "default": 260
    },
    {
      "type": "checkbox",
      "id": "show-product-image",
      "label": "Show Product Image",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_title",
      "label": "Show Product Title",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_price",
      "label": "Show Product Price",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_description",
      "label": "Show Product Description",
      "default": false
    },
    {
      "type": "range",
      "id": "product-limit",
      "label": "Product Limit",
      "min": 1,
      "max": 8,
      "step": 1,
      "default": 4
    }
  ],
  "presets": [
    {
      "name": "Product Recommendations"
    }
  ]
}
{% endschema %}

{% javascript %}
  const handleIntersection = (entries, observer) => {
    if (!entries[0].isIntersecting) return;
    observer.unobserve(productRecommendationsSection);
    const url = productRecommendationsSection.dataset.url;
    fetch(url)
      .then(response => response.text())
      .then(text => {
        const html = document.createElement('div');
        html.innerHTML = text;
        const recommendations = html.querySelector('.product-recommendations');
        if (recommendations && recommendations.innerHTML.trim().length) {
          productRecommendationsSection.innerHTML = recommendations.innerHTML;
        }
      })
      .catch(e => {
        console.error(e);
      });
  };
  const productRecommendationsSection = document.querySelector('.product-recommendations');
  const observer = new IntersectionObserver(handleIntersection, {rootMargin: '0px 0px 200px 0px'});
  observer.observe(productRecommendationsSection);
{% endjavascript %}
