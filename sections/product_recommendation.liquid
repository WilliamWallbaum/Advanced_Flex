{% assign main_collection = product.collections.first %}
{% assign section = section.settings %}
{% assign width = section.width %}
{% assign section_name = section.section_title | replace: ' ', '-' | downcase | default: 'recommendation' %}

{% style %}
  #product-recommendation {
    padding: var(--global-p2);
    display: flex;
    gap: var(--global-p1);
      flex-direction: column;
  }
  @media (max-width: 490px) {
    #product-recommendation {
      padding: var(--global-p1);
    }
    .product-grid {
      padding: 0 !important;
    }
{% endstyle %}

<!-- Product recommendation -->
{% if section.show_section %}
  <div
    id="{{ section_name }}-container"
    class="section is-width-{{ width }} product-recommendation"
    data-url="{{ routes.product_recommendation_url }}?section_id={{ section.settings.id }}&product_id={{ product.id }}&limit={{ section.product_limit }}&intent={{ section.product_type }}"
  >
    <header id="{{ section_name }}-header">
      <h2>{{ section.section_title }}</h2>
      <div>{{ section.header_copy }}</div>
    </header>

    <div class="product-grid">
      {% if section.product_type == 'related' %}
        {% for product in recommendation.products limit: section.settings.product_limit %}
          {% include 'product-card',
            show_show_product_description: section.settings.show_description,
            button_label: section.settings.button_label,
            button_class: section.settings.button_class,
            button_style: section.settings.button_style,
            card_width: section.settings.card_width
          %}
        {% endfor %}
      {% elsif section.product_type == 'complementary' %}
        {% for product in recommendation.products limit: section.settings.product_limit %}
          {% include 'product-card',
            show_show_product_description: section.show_description,
            button_label: section.settings.button_label,
            button_class: section.settings.button_class,
            button_style: section.settings.button_style,
            card_width: section.settings.card_width
          %}
        {% endfor %}
      {% else %}
        {% for product in main_collection.products limit: section.settings.product_limit %}
          {% include 'product-card',
            show_show_product_description: section.settings.show_description,
            button_label: section.settings.button_label,
            button_class: section.settings.button_class,
            button_style: section.settings.button_style,
            card_width: section.settings.card_width
          %}
        {% endfor %}
      {% endif %}
    </div>
  </div>
{% endif %}

<style>
  #{{ section_name }}-header h2 {
    font-size: calc(var(--text-basic)*({{ section.settings.header_font_size }} / 10));
  }
</style>
